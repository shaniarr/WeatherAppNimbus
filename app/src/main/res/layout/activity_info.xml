<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/info_page"
    tools:context=".Activities.Info">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/retro_gaming"
        android:text="Nimbus - Your Personalized Weather Companion"
        android:layout_marginTop="185dp"
        android:paddingHorizontal="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/info"
        android:textAlignment="center"
        android:textColor="@color/biru_nimbus"
        android:textSize="17dp"
        android:lineSpacingExtra="2dp">
    </TextView>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/retro_gaming"
        android:text="@string/info"
        android:padding="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:justificationMode="inter_word"
        android:textColor="@color/biru_nimbus"
        android:textSize="17dp"
        android:lineSpacingExtra="2dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/retro_gaming"
        android:text="Developed by:"
        android:textAlignment="center"
        android:layout_marginHorizontal="50dp"
        android:textColor="@color/biru_nimbus"
        android:textSize="17dp"
        android:lineSpacingExtra="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <Button
        android:id="@+id/btn_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to see developer info"
        android:layout_marginBottom="50dp"
        android:onClick="openpopup"
        android:fontFamily="@font/retro_gaming"
        android:backgroundTint="@color/transparent"
        android:textColor="@color/biru_nimbus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </Button>

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="25dp"
        android:onClick="openmain"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="25dp"
        android:background="@drawable/panah">
    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>